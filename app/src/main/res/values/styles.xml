<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextAppearance1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="color">@color/black</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="fontWeight">700</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="color">@color/black</item>
    </style>
    <style name="card_background" parent="ShapeAppearance.MaterialComponents.MediumComponent">>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/faded_black</item>
        <item name="cornerSize">12dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="android:layout_margin">10dp</item>
        <item name="rippleColor">@color/blue_500</item>
    </style>
    <style name="toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="elevation">4dp</item>
    </style>
</resources>